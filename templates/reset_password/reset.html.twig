{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    <div class="p-8 flex items-center justify-center bg-gray-100">
        <div class="w-full max-w-md p-6 bg-white rounded-xl shadow-md text-gray-800">
            <h1 class="text-2xl font-bold text-center mb-6">Réinitialiser votre mot de passe</h1>

            {{ form_start(resetForm) }}
                <div class="mb-4">
                    {{ form_label(resetForm.plainPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500'}}) }}
                </div>

                <button class="w-full bg-cta hover:bg-ctaSurvol text-white font-semibold py-2 px-4 rounded-md shadow">
                    Réinitialiser le mot de passe
                </button>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
