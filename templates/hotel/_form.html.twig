{% set availableFields = form|keys %}

{{ form_start(form, {'attr': {'class': 'space-y-6 bg-white p-8 rounded-2xl shadow-md max-w-5xl mx-auto'}}) }}

<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {% for fieldName in [
        'name', 'description',
        'streetName', 'streetNumber',
        'postalCode', 'city',
        'country', 'rating',
        'adminEmail', 'stars'
    ] %}
        {% if fieldName in availableFields %}
            {% set field = attribute(form, fieldName) %}
            <div class="flex flex-col w-[90%] md:w-[80%]">
                {{ form_label(field, null, {
                    'label_attr': {'class': 'text-sm font-semibold text-black mb-1'}
                }) }}
                {{ form_widget(field, {'attr': {
                    'class': 'h-8 px-2 rounded-md border border-gray-300 bg-[#F7F4F1] text-black text-sm shadow-sm focus:border-[#BC946F] focus:ring-[#BC946F]'
                }}) }}
            </div>
        {% endif %}
    {% endfor %}
</div>

<div class="pt-6">
    <button type="submit" class="inline-flex justify-center items-center rounded-md bg-[#BC946F] px-4 py-2 text-sm font-semibold text-white shadow hover:bg-[#EADDD1] transition">
        {{ button_label|default('Enregistrer') }}
    </button>
</div>

{{ form_end(form) }}
