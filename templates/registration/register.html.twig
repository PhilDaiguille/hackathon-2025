{% extends 'base.html.twig' %}

{% block title %}Inscription - MatchRoom{% endblock %}

{% block body %}
<div class="flex items-center justify-center min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white p-8 rounded-lg shadow-md">
        <div class="text-center">
            <a href="{{ path('app_home_index') }}" class="text-xl font-bold">
                <img src="{{ asset('icons/logo.svg') }}" alt="Logo" class="w-full h-8 mr-2">
            </a>
            <h1 class="text-2xl font-bold text-gray-900">Créer un compte</h1>
            <p class="mt-2 text-sm text-gray-600">Rejoignez MatchRoom pour gérer vos réservations</p>
        </div>

        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mt-4" role="alert">
                {{ flash_error }}
            </div>
        {% endfor %}

        <div class="mt-8">
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
                <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                    <div>
                        {{ form_label(registrationForm.firstname, 'Prénom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(registrationForm.firstname, {
                            'attr': {
                                'class': 'mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-secondary sm:text-sm',
                                'placeholder': 'Votre prénom'
                            }
                        }) }}
                        {{ form_errors(registrationForm.firstname, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                    </div>

                    <div>
                        {{ form_label(registrationForm.lastname, 'Nom', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                        {{ form_widget(registrationForm.lastname, {
                            'attr': {
                                'class': 'mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-secondary sm:text-sm',
                                'placeholder': 'Votre nom'
                            }
                        }) }}
                        {{ form_errors(registrationForm.lastname, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                    </div>
                </div>

                <div>
                    {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-secondary sm:text-sm',
                            'placeholder': 'votre.email@exemple.com'
                        }
                    }) }}
                    {{ form_errors(registrationForm.email, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                </div>

                <div>
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'mt-1 appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-secondary focus:border-secondary sm:text-sm',
                            'placeholder': '••••••••'
                        }
                    }) }}
                    {{ form_errors(registrationForm.plainPassword, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                </div>

                <div class="flex items-center">
                    {{ form_widget(registrationForm.agreeTerms, {
                        'attr': {
                            'class': 'h-4 w-4 text-primary focus:ring-secondary border-gray-300 rounded'
                        }
                    }) }}
                    {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation', {'label_attr': {'class': 'ml-2 block text-sm text-gray-700'}}) }}
                    {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'text-red-500 text-xs mt-1'}}) }}
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-black font-bold bg-primary hover:bg-secondary focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500">
                        S'inscrire
                    </button>
                </div>
            {{ form_end(registrationForm) }}

            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Vous avez déjà un compte?
                    <a href="{{ path('app_login') }}" class="font-medium text-primary hover:text-secondary">
                        Se connecter
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
