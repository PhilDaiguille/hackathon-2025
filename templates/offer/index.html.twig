{% extends 'base.html.twig' %}

{% block title %}Offers{% endblock %}

{% block body %}

    {% include 'components/search.html.twig' %}

    <div class="container mt-5">
        <h1 class="mb-4">Available Offers</h1>

        <div class="mb-4 text-end">
            <a href="{{ path('app_offer_new') }}" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Offer
            </a>
        </div>

        <div class="row gy-4">
            {% for offer in offers %}
                <div class="col-md-6 col-lg-4 border border-1 m-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">Offer #{{ offer.id }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                {{ offer.idHotel.name ?? 'Unknown Hotel' }}
                            </h6>

                            <p class="mb-1">
                                <strong>Room:</strong>
                                {{ offer.idRoom ? offer.idRoom.idHotel.name ~ ' - ' ~ offer.idRoom.type : 'N/A (Unknown type)' }}
                            </p>
                            <p class="mb-1">
                                <strong>From:</strong> {{ offer.availableFrom ? offer.availableFrom|date('Y-m-d H:i') : 'N/A' }}
                            </p>
                            <p class="mb-1">
                                <strong>Until:</strong> {{ offer.availableUntil ? offer.availableUntil|date('Y-m-d H:i') : 'N/A' }}
                            </p>
                            <p class="mb-1">
                                <strong>Acceptance Threshold:</strong> {{ offer.acceptanceThreshold }}<br>
                                <strong>Refusal Threshold:</strong> {{ offer.refusalThreshold }}
                            </p>
                            <p class="text-muted small">
                                <em>Created: {{ offer.createdAt ? offer.createdAt|date('Y-m-d H:i') : '' }}</em><br>
                                <em>Updated: {{ offer.updatedAt ? offer.updatedAt|date('Y-m-d H:i') : '' }}</em>
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-0 d-flex justify-content-between">
                            <a href="{{ path('app_offer_show', {'id': offer.id}) }}" class="btn btn-outline-primary btn-sm">Show</a>
                            <a href="{{ path('app_offer_edit', {'id': offer.id}) }}" class="btn btn-outline-secondary btn-sm">Edit</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center text-muted">
                    No offers found.
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
