{% extends 'base-bo.html.twig' %}

{% block title %}Détail de l'Offre{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto rounded-xl space-y-6">

        <h1 class="text-3xl font-bold text-black">Détail de l'Offre</h1>

        <div class="space-y-6 bg-white p-8 rounded-2xl shadow-md max-w-5xl mx-auto">
            <table class="w-full text-sm text-left text-black border border-gray-200">
                <tbody>
                <tr class="border-b">
                    <th class="py-2 px-4 font-semibold bg-[#F7F4F1] w-1/3">Id</th>
                    <td class="py-2 px-4">{{ offer.id }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 font-semibold bg-[#F7F4F1]">Acceptance Threshold</th>
                    <td class="py-2 px-4">{{ offer.acceptanceThreshold }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 font-semibold bg-[#F7F4F1]">Refusal Threshold</th>
                    <td class="py-2 px-4">{{ offer.refusalThreshold }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 font-semibold bg-[#F7F4F1]">Disponible à partir de</th>
                    <td class="py-2 px-4">{{ offer.availableFrom ? offer.availableFrom|date('d/m/Y') : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 font-semibold bg-[#F7F4F1]">Disponible jusqu'à</th>
                    <td class="py-2 px-4">{{ offer.availableUntil ? offer.availableUntil|date('d/m/Y') : '' }}</td>
                </tr>
                <tr class="border-b">
                    <th class="py-2 px-4 font-semibold bg-[#F7F4F1]">Créé le</th>
                    <td class="py-2 px-4">{{ offer.createdAt ? offer.createdAt|date('d/m/Y H:i') : '' }}</td>
                </tr>
                <tr>
                    <th class="py-2 px-4 font-semibold bg-[#F7F4F1]">Mis à jour le</th>
                    <td class="py-2 px-4">{{ offer.updatedAt ? offer.updatedAt|date('d/m/Y H:i') : '' }}</td>
                </tr>
                </tbody>
            </table>

            <div class="pt-4">
                <a href="{{ path('app_offer_edit', {'id': offer.id}) }}"
                   class="inline-block bg-[#BC946F] text-white text-sm font-semibold px-4 py-2 rounded-md hover:bg-[#EADDD1] transition">
                    Modifier
                </a>
            </div>
        </div>

        <div class="max-w-5xl mx-auto px-4 py-6 flex justify-between items-center">
            <a href="{{ path('app_offer_index') }}"
               class="inline-block bg-[#1F1F1F] text-white text-sm font-semibold px-4 py-2 rounded-md hover:bg-black transition">
                ← Retour à la liste
            </a>

            <div class="flex gap-3">
                {{ include('offer/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
