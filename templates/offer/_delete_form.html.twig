<form method="post" action="{{ path('app_offer_delete', {'id': offer.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
    <button type="submit" class="bg-red-700 hover:bg-red-800 text-white font-semibold text-sm px-4 py-2 rounded-md shadow transition">
        Supprimer
    </button>
</form>
