{% extends 'base-bo.html.twig' %}

{% block title %}Négociations en attente{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto px-6 py-10">
        <h1 class="text-2xl font-bold mb-6">Négociations en attente</h1>

        {% for nego in negociations %}
            <div class="p-4 bg-white border shadow-sm rounded-md mb-4">
                <p><strong>Booking ID:</strong> {{ nego.idBooking.id }}</p>
                <p><strong>Offre:</strong> #{{ nego.idBooking.idOffer.id }}</p>
                <p><strong>Prix proposé:</strong> {{ nego.newPrice }}€</p>
                <p><strong>Date limite de réponse:</strong> {{ nego.responseDeadline|date('Y-m-d H:i') }}</p>

                <div class="mt-3 flex gap-4">
                    <a href="{{ path('app_negotiation_accept', {id: nego.id}) }}"
                       class="px-4 py-2 rounded-md bg-green-600 text-white text-sm hover:bg-green-700">
                        ✅ Accepter
                    </a>
                    <a href="{{ path('app_negotiation_refuse', {id: nego.id}) }}"
                       class="px-4 py-2 rounded-md bg-red-600 text-white text-sm hover:bg-red-700">
                        ❌ Refuser
                    </a>
                </div>
            </div>
        {% else %}
            <p class="text-gray-500">Aucune négociation en attente.</p>
        {% endfor %}
    </div>
{% endblock %}
